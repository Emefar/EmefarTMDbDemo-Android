<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emefar.tmdb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.emefar.tmdb.base.App"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.emefar.tmdb.ui.main.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.emefar.tmdb.base.MainActivity" />
        <activity android:name="com.emefar.tmdb.ui.login.LoginActivity" />

    </application>

</manifest>